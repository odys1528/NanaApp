<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="210dp"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/memberPhoto"
            android:layout_alignStart="@+id/memberPhoto"
            android:layout_below="@+id/memberPhoto"
            android:layout_marginTop="20dp"
            android:text="nana"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/memberPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:maxHeight="130dp"
            android:maxWidth="130dp"/>

        <TextView
            android:id="@+id/memberDescription"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/memberPhoto"
            android:layout_alignTop="@+id/memberPhoto"
            android:gravity="bottom|left"
            android:text="nanananannananaannananananana"
            android:visibility="invisible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>