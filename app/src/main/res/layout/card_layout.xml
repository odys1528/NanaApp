<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/view_flipper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="210dp"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/member_photo"
            android:layout_alignStart="@+id/member_photo"
            android:layout_below="@+id/member_photo"
            android:layout_marginTop="20dp"
            android:text="nana"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/member_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:maxHeight="130dp"
            android:maxWidth="130dp"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:background="#ffffff"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/member_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/member_description"
                android:layout_alignStart="@+id/member_description"
                android:layout_below="@+id/member_description"
                android:layout_marginTop="20dp"
                android:text="nana"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/member_description"
                android:layout_marginTop="25dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="bottom|left"
                android:text="nanananannananaannananananana" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ViewFlipper>